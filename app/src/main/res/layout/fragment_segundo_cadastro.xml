<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.segundo_cadastro">


    <TextView
        android:id="@+id/quase_la"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Quase lá..."
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/dica_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/poppins_2"
        android:text="Só mais alguns dados"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/cadastroLabel_Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_2"
        android:text="Telefone"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/cadastroLayout_Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/inputs"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icone_telefone" />

        <EditText
            android:id="@+id/cadastro_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/nula"
            android:ems="10"
            android:hint="Digite seu telefone"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>


    <TextView
        android:id="@+id/cadastroLabel_Cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_2"
        android:text="CPF"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/cadastroLayout_Cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/inputs"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icone_cpf" />

        <EditText
            android:id="@+id/cadastro_cpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/nula"
            android:ems="10"
            android:hint="Digit seu CPF"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>

    <TextView
        android:id="@+id/cadastroLabel_Cep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_2"
        android:text="CEP"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/cadastroLayout_Cep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/inputs"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icone_cep" />

        <EditText
            android:id="@+id/cadastro_cep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/nula"
            android:ems="10"
            android:hint="Digite seu CEP"
            android:inputType="textPersonName"
            android:maxLength="9"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>


</LinearLayout>
