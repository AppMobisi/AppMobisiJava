<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   tools:context=".view.Cadastro">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".view.Cadastro">

    <LinearLayout
        android:id="@+id/voltar_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/setinha_volta"
        android:gravity="center"
        android:onClick="voltar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/setinha" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imagem_cadastro"
        android:layout_width="150dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/imagem_cadastro" />


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <Button
        android:id="@+id/cadastrar"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:backgroundTint="@color/dark_blue"
        android:fontFamily="@font/poppins_bold"
        android:onClick="chamarVerifica"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:cornerRadius="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="redirecionLogin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/incluir_fotoTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="Já tem uma conta?"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text=" Faça Login"
            android:textColor="@color/dark_blue"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
</ScrollView>