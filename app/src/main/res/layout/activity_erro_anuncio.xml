<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.ErroAnuncio">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/erro_criar_anuncio" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Oops... Parece que algo deu errado"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="22sp" />

    <Button
        android:id="@+id/tentarDnv"
        android:layout_width="362dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/poppins_bold"
        android:onClick="redireciona"
        android:text="Tentar novamente"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:contentDescription="dnv"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/irHome"
        android:layout_width="362dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:contentDescription="home"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/poppins_bold"
        android:onClick="redireciona"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:cornerRadius="10dp" />

</LinearLayout>