<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        tools:context=".view.Login">

        <LinearLayout
            android:id="@+id/voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/setinha_volta"
            android:gravity="center"
            android:onClick="voltar"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/setinha" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imagem_login"
            android:layout_width="150dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            app:srcCompat="@drawable/imagem_login" />

        <TextView
            android:id="@+id/faca_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="67dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="FaÃ§a Login"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dica_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_2"
            android:text="Digite seus dados nos campos abaixo"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/carregar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppins_2"
            android:text="Email"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/inputs"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagem_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/icone_email" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/nula"
                android:ems="10"
                android:hint="Digite seu Email"
                android:inputType="textWebEmailAddress"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/label_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_2"
            android:text="Senha"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/input_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/inputs"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/icone_senha" />

            <EditText
                android:id="@+id/login_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/nula"
                android:ems="10"
                android:hint="Digite sua senha"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/poppins_bold"
            android:onClick="Logar"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:cornerRadius="20dp" />

    </LinearLayout>
</ScrollView>