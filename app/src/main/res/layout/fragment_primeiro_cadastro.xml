<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".view.primeiro_cadastro"
    tools:visibility="visible">

    <TextView
        android:id="@+id/cadastre_se"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Cadastre-se"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/dica_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/poppins_2"
        android:text="Digite seus dados bÃ¡sicos"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/cadastroLabel_Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_2"
        android:text="Nome"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/cadastroLayout_Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/inputs"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:src="@drawable/icone_nome" />

        <EditText
            android:id="@+id/NomeAtualizar"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/nula"
            android:ems="10"
            android:hint="Digite seu nome"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>


    <TextView
        android:id="@+id/cadastroLabel_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_2"
        android:text="Emal"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/cadastroLayout_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/inputs"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/icone_email" />

        <EditText
            android:id="@+id/EmailAtualizar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/nula"
            android:ems="10"
            android:hint="Digite seu email"
            android:inputType="textWebEmailAddress"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>

    <TextView
        android:id="@+id/cadastroLabel_Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_2"
        android:text="Senha"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/cadastroLayout_Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/inputs"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icone_senha" />

        <EditText
            android:id="@+id/cadastro_senha2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/nula"
            android:ems="10"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:maxLength="15"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>

    <TextView
        android:id="@+id/senha_invalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:textColor="#F44336"
        tools:visibility="invisible" />


</LinearLayout>